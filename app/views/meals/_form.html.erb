<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Név' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :image, 'Kép' %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :category_id, 'Kategória'%>
    <%= form.collection_select :category_id, Category.all, :id, :name, {}, {class: "custom-select"} %>
  </div>

  <div class="field">
    <%= form.label :toppings, 'Feltétek' %>
    <%= form.text_field :toppings, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Mentés' %>
  </div>
<% end %>
