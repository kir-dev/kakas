<h1>Szendvicsek</h1>

<div class="card-deck">
    <% @meals.each do |meal| %>
    <div class="col-6 col-md-4">
      <div class="card mt-3">
        <div class="card-header">
          <%= meal.category.name %>
        </div>
        <%= image_tag meal.image.url(:thumb) if meal.image? %>
        <div class="card-body">
          <h5 class="card-title">
            <%= meal.name %>
          </h5>
          <p>
            <%= meal.toppings %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
</div>

