h1.title.is-1
  | Bejelentkezés
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field
    = f.label :email, class: "label"
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "input", required: true
  .field
    = f.label :password, "Jelszó", class: "label"
    = f.password_field :password, autocomplete: "current-password", class: "input", required: true
  - if devise_mapping.rememberable?
    .field
      .control
        = f.check_box :remember_me
        = f.label :remember_me, "Emlékezz rám", class: "checkbox"
  .actions
    = f.submit "Bejelentkezés", class: "button is-primary"
= render "devise/shared/links"
