<div class="images">
    <% @posters.each do |poster| %>
      <%= image_tag poster.image.url(:thumb) if poster.image? %>
      <%= link_to 'Show', poster %>
      <% if admin? %>
        <%= link_to 'Edit', edit_poster_path(poster) %>
        <%= link_to 'Destroy', poster, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>

<br>

<% if admin? %>
  <%= link_to 'New Poster', new_poster_path %>
<% end %>
